{
    "providerName": "cypress",
    "describe": "Dolibar Login",
    "assertions": [
        {
            "should": "should fail login",
            "actions": [
                {
                    "action": "goTo",
                    "url": "http://andes.on.dolicloud.com/"
                },
                {
                    "action": "write",
                    "locator": "#username",
                    "text": "wrongUser"
                },
                {
                    "action": "write",
                    "locator": "#password",
                    "text": "wrongPassword"
                },
                {
                    "action": "click",
                    "locator": "input.button"
                },
                {
                    "action": "validateText",
                    "locator": "//",
                    "expectedText": "ErrorBadLoginPassword"
                }
            ]
        },
        {
            "should": "should works logout",
            "actions": [
                {
                    "action": "clear",
                    "locator": "//"
                },
                {
                    "action": "click",
                    "locator": "//"
                },
                {
                    "action": "write",
                    "locator": "//",
                    "text": ""
                },
                {
                    "action": "validateText",
                    "locator": "//",
                    "expectedText": ""
                }
            ]
        }
    ]
}
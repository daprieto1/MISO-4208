{    
    "describe": "Dolibar Login",
    "assertions": [
        {
            "should": "should fail login",
            "actions": [
                {
                    "action": "goTo",
                    "url": "http://andes.on.dolicloud.com/"
                },
                {
                    "action": "write",
                    "locator": "#username",
                    "text": "wrongUser"
                },
                {
                    "action": "write",
                    "locator": "#password",
                    "text": "wrongPassword"
                },
                {
                    "action": "click",
                    "locator": "input.button"
                },
                {
                    "action": "validateText",
                    "locator": "//",
                    "expectedText": "ErrorBadLoginPassword"
                }
            ]
        },
        {
            "should": "should works login",
            "actions": [
                {
                    "action": "goTo",
                    "url": "http://andes.on.dolicloud.com/"
                },
                {
                    "action": "write",
                    "locator": "#username",
                    "text": "diego"
                },
                {
                    "action": "write",
                    "locator": "#password",
                    "text": "12345678"
                },
                {
                    "action": "click",
                    "locator": "input.button"
                },
                {
                    "action": "validateText",
                    "locator": "//",
                    "expectedText": "MyDashboard"
                }
            ]
        }
    ]
}